<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/homeFragment">


    <fragment
        android:id="@+id/homeFragment"
        android:name="com.scholar.center.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_teacherFragment"
            app:destination="@id/teacherFragment"
            app:launchSingleTop="true"
            />
    </fragment>

    <fragment
        android:id="@+id/teacherFragment"
        android:name="com.scholar.center.ui.teacher.TeacherFragment"
        android:label="fragment_teachers"
        tools:layout="@layout/fragment_teachers" >
        <action
            android:id="@+id/action_teacherFragment_to_storiesFragment"
            app:destination="@id/storiesFragment"
            app:launchSingleTop="true"/>
    </fragment>

    <fragment
        android:id="@+id/storiesFragment"
        android:name="com.scholar.center.ui.story.StoryFragment"
        android:label="fragment_stories"
        tools:layout="@layout/fragment_stories" >
        <action
            android:id="@+id/action_storiesFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:launchSingleTop="true"/>
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.scholar.center.ui.setting.SettingsFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />

</navigation>